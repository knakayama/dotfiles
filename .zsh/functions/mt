mt() {
  -mt-usage() {
    cat <<'EOT'
Usage: mt dir-name

EOT
  }

  local my_dir="$1"

  if [[ $# -eq 1 ]]; then
    mutt \
      -e "set my_dir = ${HOME}/.mutt-${my_dir}"  \
      -e "source ${HOME}/.mutt/muttrc"           \
      -e "source ${HOME}/.mutt-${my_dir}/muttrc"
  else
    -mt-usage
    return 1
  fi
}

