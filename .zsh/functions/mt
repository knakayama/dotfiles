mt() {
  -mt-usage() {
    cat <<'EOT'
Usage: mt dir-name

EOT
  }

  local my_dir="$1"
  local my_account="$2"

  if (( $# == 1 )); then
    mutt \
      -e "set my_dir = ${HOME}/.mutt-${my_dir}"  \
      -e "source ${HOME}/.mutt/muttrc"           \
      -e "source ${HOME}/.mutt-${my_dir}/muttrc"
  elif (( $# == 2 )); then
    echo unko
    mutt \
      -e "set my_dir = ${HOME}/.mutt-${my_dir}"  \
      -e "set my_account = $my_account"          \
      -e "source ${HOME}/.mutt/muttrc"           \
      -e "source ${HOME}/.mutt-${my_dir}/muttrc"
  else
    -mt-usage
    return 1
  fi
}

