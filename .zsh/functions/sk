sk() {
  local priv_key="site_key"
  local pub_key="${priv_key}.pub"

  [[ -f "$priv_key" && -f "$pub_key" ]] \
    || ssh-keygen -f "$priv_key" -N ''

  chmod 400 "$priv_key"
  chmod 600 "$pub_key"
}

