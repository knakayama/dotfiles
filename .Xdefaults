! see archwiki about urxvt

! restart
! xrdb -merge ~/.Xdefaults

! name
URxvt.termName: rxvt-unicode

! color
URxvt.foreground: snow
URxvt.background: Gray10
URxvt.color4: #5566FF
URxvt.color12: #7799FF
URxvt.color11: #BBBB22

! scrollback buffer
URxvt.saveLines: 20000

! scroll
! scrollbar style - rxvt(default), plain, next, or xterm
URxvt.scrollBar: False
!URxvt.scrollstyle: plain
!URxvt.scrollBar_right: true

!URxvt.geometry: 100x35

! Font
URxvt.font: xft:Ricty-Bold:size=12 antialias=true
Xft*antialias: true
URxvt.shading: 10

! Perl extensions
URxvt.perl-lib: /home/knakayama/urxvt-perls/
!URxvt.perl-ext-common: default,matcher,clipboard,keyboard-select
!URxvt.urlLauncher: /usr/bin/firefox
!URxvt.matcher.button: 1
URxvt.perl-ext-common: default,url-select,clipboard,keyboard-select
URxvt.colorUL: $4682B4
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/firefox
URxvt.url-select.autocopy: true
URxvt.url-select.underline: true
! Alt + Shift + c -> copy
! Alt + Shift + v -> paste
! Control + Shift + Alt + v -> paste escape
URxvt.keysym.M-C: perl:clipboard:copy
URxvt.keysym.M-V: perl:clipboard:paste
!URxvt.keysym.C-M-v: perl:clipboard:paste_escape
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

! ibus settings
URxvt.inputMethod: ibus
URxvt.preeditType: OverTheSpot

