! see archwiki about urxvt

! restart
! xrdb -merge ~/.Xdefaults

! name
URxvt.termName: rxvt-unicode

! color
URxvt.foreground: snow
URxvt.background: Gray10
URxvt.color4: #5566FF
URxvt.color12: #7799FF
URxvt.color11: #BBBB22

! scrollback buffer
URxvt.saveLines: 20000

! scroll
! scrollbar style - rxvt(default), plain, next, or xterm
URxvt.scrollBar: False
!URxvt.scrollstyle: plain
!URxvt.scrollBar_right: true

!URxvt.geometry: 100x35

! Font
URxvt.font: xft:Ricty-Bold:size=12 antialias=true
Xft*antialias: true
URxvt.shading: 10

! Perl extensions
URxvt.perl-lib: $HOME/urxvt-perls
URxvt.perl-ext-common: default,matcher,clipboard
URxvt.urlLauncher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt.colorUL: $4682B4
URxvt.keysym.C-c: perl:clipboard:copy
URxvt.keysym.C-v: perl:clipboard:paste
URxvt.keysym.C-M-v: perl:clipboard:paste_escape
! Yankable URLs
!URxvt.perl-ext: default,url-select
!URxvt.keysym.M-u: perl:url-select:select_next
!URxvt.urlLauncher: firefox
!URxvt.underlineURLs: true

! ibus settings
URxvt.inputMethod: ibus
URxvt.preeditType: OverTheSpot

