# setting the prefix keys
escape C-o

exec rpws init 10 -k

set fwcolor orange
set bgcolor PaleGoldenRod

startup_message off

# bind
bind c exec urxvt 
#bind z exec amixer sset Front 10%+
#bind Z exec amixer sset Front 10%-
#bind h exec amixer sset Front 0
#bind H exec amixer sset Front 40

# Screenshot
bind p exec import -window root `date +%F`.jpg

# Simulate a click on mousebutton
# 1 -> left button
# 2 -> middile mouse button
bind l ratclick 1
bind v ratclick 2

bind f exec firefox --remote "openurl(`$RATPOISON -c getsel`,new-tab)"

# hide cursor
exec unclutter -idle 1 -jitter 2 -root

# set background image
#exec nitrogen --restore /path/to/img.jpg

# execute urxvt on startup
exec urxvt 

