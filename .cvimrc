""""""""""""""""""
" Black Lists
""""""""""""""""""

site "https://feedly.com/*" {
  unmap j
  unmap k
  unmap v
  unmap ga
}

site "https://mail.google.com/*" {
  unmap j
  unmap k
  unmap ga
  unmap <C-i>
  unmap <C-u>
  unmap /
}

site "https://kcw.kddi.ne.jp/*" {
  unmap j
  unmap k
  unmap m
  unmap /
}

site "https://www.rememberthemilk.com" {
  unmap j
  unmap k
  unmap d
  unmap ga
  unmap h
  unmap u
}
