# enable color support of ls and also add handly aliases
if [[ -x "$(type -p dircolors | cut -d' ' -f3)" ]]; then
    eval "`dircolors -b`"
    alias ls="ls --color=auto"
    alias dir="dir --color=auto"
    alias vdir="vdir --color=auto"

    alias grep="grep --color=auto"
    alias fgrep="fgrep --color=auto"
    alias egrep="egrep --color=auto"
fi

# miscellaneous aliases
# http://www.jmuk.org/diary/index.php/2007/02/23/2/
# nocorrect は zsh の予約語で、以降のコマンドにおける訂正を抑制する効果がある。
# cp なんかでは新しくファイルを作ることが多いから、いちいち訂正を出されるよりはこのようにするといい。
# ほかにも mv、mkdir、touchなどもそうだろう
alias mv="nocorrect mv"
alias cp="nocorrect cp"
alias mkdir="nocorrect mkdir"
