# enable color support of ls and also add handly aliases
if [[ -x "$(type -p dircolors | cut -d' ' -f3)" ]]; then
    eval "`dircolors -b`"
    alias ls="ls --color=auto"
    alias dir="dir --color=auto"
    alias vdir="vdir --color=auto"

    alias grep="grep --color=auto"
    alias fgrep="fgrep --color=auto"
    alias egrep="egrep --color=auto"
fi

# ls aliases
alias l="ls -CF"
alias ll="ls -l"
alias la="ls -A"
alias lla="ls -lA"
alias lld="ls -ld"
# display only dot files
alias lsa="ls -ld .*"
# display only directory and directory alias
alias lsd="ls -ld *(-/DN)"

# Print recently used docker image id
alias dl="sudo docker ps -l -q"

